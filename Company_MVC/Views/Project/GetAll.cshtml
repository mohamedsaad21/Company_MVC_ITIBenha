@model List<Project>

<h3 class="text-center mt-4 main-title position-relative">Projects</h3>

<table class="table table-striped table-hover mt-5">
    <thead>
        <tr class="bg-primary text-white">
            <th>Name</th>
            <th>Location</th>
            <th>Department</th>
            <th>Extra Info</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Project in Model)
        {
            <tr>
                <td>@Project.Name</td>
                <td>@Project.Location</td>
                <td>@Project.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@Project.Id" class="btn btn-primary">More Details</a> |
                    <a asp-action="GetEditForm" asp-route-id="@Project.Id" class="btn btn-primary">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@Project.Id" class="btn btn-primary">Delete</a> 
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="GetAddForm" class="btn btn-primary">New Project</a>
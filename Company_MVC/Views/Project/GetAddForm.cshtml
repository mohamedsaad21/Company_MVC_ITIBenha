@model ProjectWithDeptViewModel


<h3 class="text-center mt-4 main-title position-relative">New Project</h3>

<form class="mt-5" action="/Project/SaveAdd" method="post">
    <div class="form-group">
        <label for="Name" class="form-label">Name</label>
        <input class="form-control" value="@Model?.Name" name="Name" type="text" id="Name" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Location" class="form-label">Location</label>
        <input class="form-control" value="@Model?.Location" name="Location" type="text" id="Location" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="DepartmentId" class="form-label">Department</label>
        <select class="form-control" name="DepartmentId" id="DepartmentId">
            @foreach (var dept in Model.Departments)
            {
                @if (Model.DepartmentId == dept.Id)
                {
                    <option value="@dept.Id" selected>@dept.Name</option>
                }
                else
                {
                    <option value="@dept.Id">@dept.Name</option>
                }
            }
        </select>
        <span class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-4">Add</button>
</form>
<a asp-action="GetAll" class="btn btn-primary mt-4">Back To List</a>
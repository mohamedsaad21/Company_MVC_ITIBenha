@model DepartmentWithEmpViewModel


<h3 class="text-center mt-4 main-title position-relative">Edit Department</h3>

<form class="mt-5" asp-action="SaveEdit">
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label asp-for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for=Name />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label for="address" class="form-label">Manager</label>
        <select class="form-control" asp-for="ManagerId">
            @foreach (var Manager in Model.Managers)
            {
                @if (Model.ManagerId == Manager.Id)
                {
                    <option value="@Manager.Id" selected>@Manager.FirstName @Manager.LastName</option>
                }
                else
                {
                    <option value="@Manager.Id">@Manager.FirstName @Manager.LastName</option>
                }
            }
        </select>
        <span class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
<a asp-action="GetAll" class="btn btn-primary mt-4">Back To List</a>